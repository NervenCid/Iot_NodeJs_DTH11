<div class="row">
    {{#each devices}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{ deviceName }} <a href="/devices/edit/{{_id}}"><i class="fas fa-edit"></i></a><section></section>
                </h4>

                <!--
                <p>{{ userOwner }}</p>
                <p>{{ token }}</p>
                <p>{{ temperature }}</p>
                <p>{{ humidity }}</p>
                <p>{{ date }}</p>
                -->

                <!-- DETAILED VIEW -->

                <form action="/devices/{{_id}}?_method=GET" method="GET">
                    <!--el name="_method" es obligatorio para que funcione-->
                    <input type="hidden" name="_method" value="GET">
                    <button type="submit" class="btn btn-danger btn-block btn-sm">Ver</button>
                </form>

                <!-- DELETE REQUEST -->
                <form action="/devices/delete/{{_id}}?_method=DELETE" method="POST">
                    <!--el name="_method" es obligatorio para que funcione-->
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-info btn-block btn-sm">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <h1>Hola {{user.userOwner}}</h1>
            <p clsss="lead">No tienes dispositivos registrados aun.</p>
            <a href="/devices/add" class="btn btn-success btn-block">Crear un nuevo dispositivo!</a>
        </div>
    </div>
    {{/each}}
</div>